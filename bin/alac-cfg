#!/bin/bash

AL_YML="$HOME/.config/alacritty/alacritty.yml"
FLOAT_RE='^[+-]?[0-9]+\.?[0-9]*$'
NOT_OPTION='^[^-].*'

while [[ $1 ]]; do
    case $1 in
        -c | --color)
            if [[ $2 =~ $NOT_OPTION ]]; then
                sed -Ei "s/(alacritty\/colors).*$/\1\/$2\.yml/" $AL_YML
                shift
            else
                cat $AL_YML | grep 'alacritty/colors'
            fi;;
        -o | --opacity)
            if [[ $2 =~ $FLOAT_RE ]]; then
                sed -Ei "s/(opacity:).*$/\1 $2/" $AL_YML
                shift
            else
                cat $AL_YML | grep opacity 
            fi;;
    esac
    shift
done

